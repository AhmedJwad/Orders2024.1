﻿

﻿<AuthorizeView>
    <Authorized>
        <span class="d-flex align-items-center">
            Hello, <a href="EditUser" class="nav-link btn btn-link">@context.User.Identity!.Name</a>
        </span>
        @if (!string.IsNullOrEmpty(photoUser))
        {
            <div class="mx-2">
                <img src="@photoUser" width="50" height="50" style="border-radius:50%" />
            </div>
        }
        <a href="Logout" class="nav-link btn btn-link">Logout</a>
    </Authorized>
    <NotAuthorized>
        <a href="register" class="nav-link btn btn-link">Register</a>
        <a @onclick=@(() => ShowModal()) class="nav-link btn btn-link">Login</a>
    </NotAuthorized>
</AuthorizeView>