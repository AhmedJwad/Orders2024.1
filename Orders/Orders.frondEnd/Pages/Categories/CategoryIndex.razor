@page  "/categories"

<h3>Categories</h3>


<div class="mb-3">
    <a class="btn btn-primary" href="/Category/Create">New Category</a>
</div>


<div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
    <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Search..." @bind-value="Filter" />
    <button type="button" class="btn btn-outline-primary mx-1" @onclick="ApplyFilterAsync">Filter</button>
    <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync">clear</button>
</div>

<GenericList MyList="Categories">

    <body>
        <Pagination CurrentPage="currentPage" TotalPages="totalPages" SelectedPage="SelectedPageAsync" />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Categories</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories!)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            <a href="/category/edit/@category.Id" class="btn btn-warning">Edit</a>
                            <button onclick="@(()=>DeleteAsync(category))" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </body>
</GenericList>
